                    android:background="@color/fundoEvento18"
                    android:onClick="onButtonClicker"
                    android:textColor="@color/colorIce"
                    android:text="@string/Evento_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/main_btn_19"
                    style="@style/Evento"
                    android:background="@color/fundoEvento19"
                    android:onClick="onButtonClicker"
                    android:text="@string/Evento_19" />

                <Button
                    android:id="@+id/main_btn_20"
                    style="@style/Evento"
                    android:background="@color/fundoEvento20"
                    android:onClick="onButtonClicker"
                    android:text="@string/Evento_20" />
                <Button
                    android:id="@+id/reuniao_btn"
                    style="@style/Evento"
                    android:background="@color/fundoEvento14"
                    android:onClick="onButtonClicker"
                    android:text="@string/Reuniao"
                    android:textColor="@color/colorPrimaryDark" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>