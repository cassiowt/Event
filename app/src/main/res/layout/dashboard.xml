                <Button
                    android:id="@+id/evento_btn_5"
                    style="@style/Evento"
                    android:background="@color/fundoEvento5"
                    android:onClick="onButtonClicker"
                    android:text="@string/Evento_5"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/evento_btn_6"
                    style="@style/Evento"
                    android:background="@color/fundoEvento6"
                    android:onClick="onButtonClicker"
                    android:text="@string/Evento_6"
                    android:textColor="@color/colorIce" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/main_btn_7"
                    style="@style/Evento"
                    android:background="@color/fundoEvento7"
                    android:onClick="onButtonClicker"
                    android:text="@string/Evento_7"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/main_btn_8"
                    style="@style/Evento"
                    android:background="@color/fundoEvento8"
                    android:onClick="onButtonClicker"
                    android:text="@string/Evento_8"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/main_btn_9"
                    style="@style/Evento"
                    android:background="@color/fundoEvento9"
                    android:onClick="onButtonClicker"
                    android:text="@string/Evento_9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/main_btn_10"
                    style="@style/Evento"
                    android:background="@color/fundoEvento10"
                    android:onClick="onButtonClicker"
                    android:text="@string/Evento_10" />

                <Button
                    android:id="@+id/main_btn_11"
                    style="@style/Evento"
                    android:background="@color/fundoEvento11"
